#!/bin/bash

if [ -t 0 ] ; then
    moinsit='-it'
else
    moinsit=''
fi

USER_ID=$(id -u)
GROUP_ID=$(id -g)

export USERID=$USER_ID
export GROUPID=$GROUP_ID



docker compose \
  run ${moinsit} \
  --rm \
  --user $USER_ID:$GROUP_ID \
  -v "$PWD":"$PWD" \
  php composer $@


